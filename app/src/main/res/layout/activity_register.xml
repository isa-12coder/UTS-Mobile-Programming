<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account Now!"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppinsbold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/l_txt.1"/>

    <TextView
        android:id="@+id/l_txt.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.1"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Fullname"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.2"
        android:layout_marginTop="1dp"
        android:background="@drawable/button1">

    <TextView

        android:id="@+id/l_txt.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.2"
        android:layout_marginTop="80dp"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.2"
        android:layout_marginTop="120dp"
        android:background="@drawable/button1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.3"
        android:layout_marginTop="80dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold">


    <EditText
        android:id="@+id/l_txt.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.3"
        android:layout_marginTop="120dp"
        android:background="@drawable/button1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.4"
        android:layout_marginTop="20dp"
        android:text="Phone No"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold">


    <EditText
        android:id="@+id/l_txt.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.4"
        android:layout_marginTop="70dp"
        android:background="@drawable/button1">

    <LinearLayout
        android:id="@+id/l_txt.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.6"
        android:layout_marginTop="30dp"
        android:padding="0dp">

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.7"
        android:width="280dp"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/btn.1"
        />

</RelativeLayout>