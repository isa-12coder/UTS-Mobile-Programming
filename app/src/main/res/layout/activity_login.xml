<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppinsbold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/l_txt.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.1"
        android:text="Login to continue"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:id="@+id/l_txt.2">

    </TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/l_txt.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_below="@id/l_txt.2"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.3"
        android:layout_marginTop="1dp"
        android:background="@drawable/button1"
        android:hint="Enter Your Username"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.3"
        android:layout_marginTop="80dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/l_txt.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.3"
        android:layout_marginTop="120dp"
        android:background="@drawable/button1"
        />

    <LinearLayout
        android:id="@+id/l_txt.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_txt.4"
        android:layout_marginTop="15dp"
        android:padding="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:src="@drawable/button2"
            />

        <TextView
            android:layout_width="124dp"
            android:layout_height="30dp"
            android:layout_below="@id/l_txt.3"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:text="Remember me"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l_txt.3"
            android:layout_marginRight="15dp"
            android:layout_weight="20"
            android:text="Forget Password"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_txt.5"
        android:width="280dp"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/btn.1"
        />

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/l_txt.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn.1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Donâ€™t have an account?"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/PrimaryColor"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>